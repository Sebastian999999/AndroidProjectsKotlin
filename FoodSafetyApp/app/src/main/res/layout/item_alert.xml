<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewAlert"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <View
            android:id="@+id/viewUnreadIndicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/circle_indicator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:backgroundTint="#2196F3" />

        <ImageView
            android:id="@+id/imageViewAlertSeverity"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/warning" />

        <TextView
            android:id="@+id/textViewAlertTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/viewUnreadIndicator"
            app:layout_constraintStart_toEndOf="@+id/imageViewAlertSeverity"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Safety Warning" />

        <TextView
            android:id="@+id/textViewAlertDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/textViewAlertTitle"
            app:layout_constraintTop_toBottomOf="@+id/textViewAlertTitle"
            tools:text="Feb 25, 2025 14:30" />

        <TextView
            android:id="@+id/textViewAlertFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/rounded_food_tag"
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:paddingEnd="8dp"
            android:paddingBottom="2dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/textViewAlertDate"
            app:layout_constraintStart_toEndOf="@+id/textViewAlertDate"
            app:layout_constraintTop_toTopOf="@+id/textViewAlertDate"
            tools:backgroundTint="#4CAF50"
            tools:text="Chicken" />

        <TextView
            android:id="@+id/textViewAlertMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textViewAlertTitle"
            app:layout_constraintTop_toBottomOf="@+id/textViewAlertDate"
            tools:text="This food item may have signs of spoilage. Please check before consuming." />

        <ImageView
            android:id="@+id/imageViewAlertImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/textViewAlertMessage"
            app:layout_constraintTop_toBottomOf="@+id/textViewAlertMessage"
            tools:src="@tools:sample/foods" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>