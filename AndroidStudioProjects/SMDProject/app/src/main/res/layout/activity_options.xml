<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/skyblue"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Options">
    <ImageView
        android:layout_marginTop="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/smartcartlogo"
        android:id="@+id/smartcartlogo"
        android:layout_gravity="center"
        />

    <Button
        android:background="@drawable/simpleroundedcornerbuttons"
        android:id="@+id/DigitalListbtn"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_height="80dp"
        android:textColor="@color/skyblue"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:text="Digital List"
        />

    <Button
        android:background="@drawable/simpleroundedcornerbuttons"
        android:id="@+id/ScanProductbtn"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_height="80dp"
        android:textColor="@color/skyblue"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:text="Scan Product"
        />
</LinearLayout>