<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".QiblaCompassFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ivqibladirectionimage"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/qiblalocationbackground"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/applythemeicon"
            android:id="@+id/mbapplytheme"


            app:layout_constraintTop_toBottomOf="@id/ivqibladirectionimage"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="7dp"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/ivqiblacompasstheme"
            app:layout_constraintTop_toBottomOf="@id/mbapplytheme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="50dp"
            android:background="@drawable/q7compass"
            android:scaleType="fitXY"
            />
        
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>