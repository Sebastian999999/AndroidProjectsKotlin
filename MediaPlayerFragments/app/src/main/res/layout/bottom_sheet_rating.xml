<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="29.44dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:backgroundTint="@color/black_secondary"
    tools:context=".MainActivity"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mivrating"
        app:srcCompat="@mipmap/rating_image"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mtvsupport"
        android:text="We appreciate your Support"
        android:textSize="26sp"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:textFontWeight="700"
        android:lineHeight = "39dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mivrating"
        />
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We would be very thankful if you rate us"
        android:textSize="18sp"
        android:textColor="@color/color_secondary_gray"
        android:layout_marginStart="10dp"
        android:id="@+id/rating_description"
        android:textFontWeight="400"
        android:lineHeight = "23.56dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mtvsupport"
        />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="1"
            android:id="@+id/rating"
            android:stepSize="1"
            android:numStars="5"
            android:layout_marginVertical="30dp"
            android:progressDrawable="@drawable/custom_rating_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rating_description"
            app:layout_constraintBottom_toTopOf="@id/mbrate"

            />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbrate"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="20dp"
        android:color="@color/color_primary_gray"
        android:text="Rate"
        android:textSize="26.5dp"
        android:textFontWeight="700"
        android:backgroundTint="@color/color_primary_blue"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>