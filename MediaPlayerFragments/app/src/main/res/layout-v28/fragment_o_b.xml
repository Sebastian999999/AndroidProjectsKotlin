<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.androidcom/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OBFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/clbackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtvskip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:elevation="2dp"
        android:textColor="@color/color_primary_gray"
        android:textFontWeight="600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/msivfragmentpics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/hallo"
        android:elevation="0dp"
        android:background="@mipmap/abstract_colourful_background" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp2imageswiper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:tabIndicatorColor="@color/white"
        app:tabSelectedTextColor="@color/color_primary_blue"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"
        app:tabTextColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@id/mtv2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@id/tab_layout"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <FrameLayout
        android:id="@+id/flbannerad"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="5dp"
        >

    </FrameLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:id="@+id/mtvnext"
        app:backgroundTint="@color/color_primary_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:backgroundTintMode="src_atop"
        android:text="@string/next"
        app:elevation="30dp"
        android:textSize="13sp"
        android:textFontWeight="400"
        android:textAlignment="gravity"
        android:gravity="center"
        android:textColor="#FFFFFF"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtvskip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:elevation="2dp"
        android:textColor="@color/color_primary_gray"
        android:textFontWeight="600"
        app:layout_constraintTop_toTopOf="@id/mbnext2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/mbnext2"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:id="@+id/mbnext2"
        app:backgroundTint="@color/color_primary_blue"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintBottom_toBottomOf="@id/tab_layout"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:backgroundTintMode="src_atop"
        android:text="@string/next"
        app:elevation="30dp"
        android:textSize="13sp"
        android:textFontWeight="400"
        android:textAlignment="gravity"
        android:gravity="center"
        android:textColor="#FFFFFF"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

    <!-- TODO: Update blank fragment layout -->


</FrameLayout>